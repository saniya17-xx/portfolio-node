<script>
    document.getElementById("chat-input")
    .addEventListener("keypress", function(event) {
        if (event.key === "Enter") {
            event.preventDefault();
            sendMessage();
        }
    });

const socket = io();
let visitorName = "";

function registerName() {
    const nameInput = document.getElementById("visitor-name");
    visitorName = nameInput.value;

    if (!visitorName) return;

    socket.emit("registerVisitor", { name: visitorName });

    document.getElementById("name-input-area").style.display = "none";
}

function toggleChat() {
    const widget = document.getElementById("chat-widget");
    widget.style.display =
        widget.style.display === "flex" ? "none" : "flex";
}

function sendMessage() {
    if (!visitorName) {
        alert("Please enter your name first.");
        return;
    }

    const input = document.getElementById("chat-input");
    const message = input.value;
    if (!message) return;

    socket.emit("visitorMessage", { message });

    addMessage("You", message, true);

    input.value = "";
}


function addMessage(sender, message, isOwn) {
    const messages = document.getElementById("chat-messages");
    const msgDiv = document.createElement("div");

    msgDiv.className = isOwn ? "chat-bubble own" : "chat-bubble";

    const time = new Date().toLocaleTimeString();

    msgDiv.innerHTML = `<strong>${sender}</strong><br>${message}<div class="time">${time}</div>`;

    messages.appendChild(msgDiv);
    messages.scrollTop = messages.scrollHeight;
}

socket.on("visitorReceiveMessage", (data) => {
    addMessage("Admin", data.message, false);
});
</script>


